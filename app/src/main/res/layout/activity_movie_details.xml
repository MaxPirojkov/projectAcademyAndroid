<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".MovieDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageSkin"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/orig"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="@drawable/gradient"
            />

        <TextView
            android:id="@+id/movieAge"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="331dp"
            android:text="13+"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameOfMovie"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto"
            android:text="Avengers:\nEnd Game"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movieSlogan"
            android:layout_width="343dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto"
            android:text="Action, Adventure, Fantasy"
            android:textColor="#FF3466"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameOfMovie" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="347dp"
            android:src="@drawable/star_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieSlogan" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/star_red"
            app:layout_constraintEnd_toStartOf="@+id/star3"
            app:layout_constraintStart_toEndOf="@+id/star1"
            app:layout_constraintTop_toBottomOf="@+id/movieSlogan" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_red"
            app:layout_constraintEnd_toStartOf="@+id/star4"
            app:layout_constraintTop_toBottomOf="@+id/movieSlogan" />


        <ImageView
            android:id="@+id/star4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_red"
            app:layout_constraintStart_toEndOf="@+id/star3"
            app:layout_constraintTop_toBottomOf="@+id/movieSlogan" />


        <ImageView
            android:id="@+id/star5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_gray"
            app:layout_constraintStart_toEndOf="@+id/star4"
            app:layout_constraintTop_toBottomOf="@+id/movieSlogan" />

        <TextView
            android:id="@+id/Qreview"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="194dp"
            android:fontFamily="@font/roboto"
            android:text="125 Reviews"
            android:textColor="#6D6D80"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/star5"
            app:layout_constraintTop_toBottomOf="@+id/movieSlogan" />


        <TextView
            android:id="@+id/storyLine"
            android:layout_width="343dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:text="Storyline"
            android:textColor="#ECECEC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Qreview" />

        <TextView
            android:id="@+id/storyDescrip"
            android:layout_width="343dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:lineHeight="20sp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:text="After the devastating events of Avengers: Infinity\nWar, the universe is in ruins. With the help\nof remaining allies, the Avengers assemble once more\nin order to reverse Thanos' actions and restore\nbalance to the universe."
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storyLine" />


        <TextView
            android:id="@+id/textCast"
            android:layout_width="243dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="116dp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:text="Cast"
            android:textColor="#ECECEC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storyDescrip" />


        <ImageView
            android:id="@+id/downeyJr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/downeyjr"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="279dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCast"
            />

        <ImageView
            android:id="@+id/evans"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/evans"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/downeyJr"
            app:layout_constraintTop_toBottomOf="@+id/textCast"
            />

        <ImageView
            android:id="@+id/mark"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/mark"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/evans"
            app:layout_constraintTop_toBottomOf="@+id/textCast"
            />

        <ImageView
            android:id="@+id/hemsworht"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/hemsworth"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/mark"
            app:layout_constraintTop_toBottomOf="@+id/textCast"
            />

        <TextView
            android:id="@+id/name1"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="Robert\nDowney Jr."
            android:textColor="#D8D8D8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="279dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/downeyJr"
            />

        <TextView
            android:id="@+id/name2"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="Chris\nEvans"
            android:textColor="#D8D8D8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@+id/name1"
            app:layout_constraintTop_toBottomOf="@+id/evans"
            />

        <TextView
            android:id="@+id/name3"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="Mark\nRuffalo"
            android:textColor="#D8D8D8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@+id/name2"
            app:layout_constraintTop_toBottomOf="@+id/mark"
            />

        <TextView
            android:id="@+id/name4"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="Mark\nRuffalo"
            android:textColor="#D8D8D8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@+id/name3"
            app:layout_constraintTop_toBottomOf="@+id/hemsworht"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>